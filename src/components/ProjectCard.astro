---
import { Image } from 'astro:assets';
const { project } = Astro.props;
---

<div class="min-w-[300px] h-full min-h-[120px] pt-8 pb-2 flex lg:flex-row md:flex-col sm:flex-row flex-col gap-2 justify-between lg:items-end md:items-start sm:items-end items-start border-solid border-white border-b-2 hover:bg-red hover:text-white">
    <div class="flex flex-col justify-end items-start">
        <div class="text-xl font-mono">{project.title}</div>
        <div class="text-base uppercase font-light">{project.creator}</div>
        â‡¥
        <div class="text-sm font-mono font-light">{project.description}</div>
    </div>
    {project.photo ?
        <Image
            width={200}
            height={150}
            src={project.photo}
            alt={project.photo} />
    :
        <div></div>
    }
</div>

<p class:list={["add", "dynamic", {classNames: true}]} />
