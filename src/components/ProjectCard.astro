---
import { Image } from 'astro:assets';
const { project } = Astro.props;
---

<div class="h-full md:max-h-44 flex lg:flex-row md:flex-col sm:flex-row flex-col gap-2 justify-between items-start border-solid hover:bg-red hover:text-white">
    <div class="flex flex-col justify-start items-start p-2">
        <div class="text-3xl font-mono font-semibold">{project.title}</div>
        <div class="text-base uppercase font-light">{project.creator}</div>
        â‡¥
        <div class="text-sm font-mono font-light">{project.description}</div>
    </div>
    {project.photo ?
        <Image
            width={200}
            height={150}
            src={project.photo}
            alt={project.photo}
        />
    :
    null
    }
</div>
